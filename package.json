{
  "name": "wifi-usb-hid-tests",
  "version": "1.0.0",
  "description": "Test suite for WiFi USB HID project",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/ui/**/*.test.js"
    ],
    "coverageDirectory": "tests/ui/coverage",
    "collectCoverageFrom": [
      "nodemcu/data/script.js"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
